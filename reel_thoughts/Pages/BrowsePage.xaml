    <Page.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        <Style x:Key="ItemStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Page.Resources>

    <ListView x:Name="TitlesListView" Margin="10">
        <ListView.ItemTemplate>
            <DataTemplate>
                <Expander Header="{Binding PrimaryTitle}" IsExpanded="False">
                    <StackPanel>
                        <TextBlock Text="Title Information:" FontWeight="Bold" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Year: " Style="{StaticResource HeaderStyle}"/>
                            <TextBlock Text="{Binding StartYear}" Style="{StaticResource ItemStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Rating: " Style="{StaticResource HeaderStyle}"/>
                            <TextBlock Text="{Binding AverageRating}" Style="{StaticResource ItemStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Runtime: " Style="{StaticResource HeaderStyle}"/>
                            <TextBlock Text="{Binding RuntimeMinutes, StringFormat='{}{0} min'}" Style="{StaticResource ItemStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Genres: " Style="{StaticResource HeaderStyle}"/>
                            <TextBlock Text="{Binding Genres}" Style="{StaticResource ItemStyle}"/>
                        </StackPanel>
                        
                        <ItemsControl ItemsSource="{Binding Episodes}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding EpisodeNumber, StringFormat='Episode {0}:'}" FontWeight="Bold" />
                                    
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Expander>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>


</Page>
