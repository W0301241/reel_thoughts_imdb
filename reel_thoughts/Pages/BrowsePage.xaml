<Page x:Class="reel_thoughts.Pages.BrowsePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:reel_thoughts.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BrowsePage">

    <ListView x:Name="TitlesListView" Height="500">
        <ListView.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Border Width="20" Height="20" BorderThickness="3"></Border>
                    <StackPanel Orientation="Vertical" Margin="10,0,0,0" Width="200">
                        <TextBlock Text="Movie Title:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding PrimaryTitle}"/>
                        <TextBlock Text="Start Year:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding StartYear}"/>
                    </StackPanel>
                    <StackPanel Margin="10,0,0,0" Width="200">
                        <TextBlock Text="Rating:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Rating.Value}"/>
                        <TextBlock Text="Runtime:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding RuntimeMinutes, StringFormat='{}{0} min'}"/>
                    </StackPanel>
                </StackPanel>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    
</Page>
