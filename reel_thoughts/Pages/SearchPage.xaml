<Page x:Class="reel_thoughts.Pages.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:reel_thoughts.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SearchPage">

    <Page.Resources>
        <CollectionViewSource x:Key="searchViewSource"></CollectionViewSource>
    </Page.Resources>

    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Search Page"></TextBlock>
            <TextBox x:Name="txtSearch" Width="300" Height="30" FontSize="20"/>
            <Button x:Name="SearchButton"
                    Click="SearchButton_Click" Style="{StaticResource SearchButton}"/>
        </StackPanel>
        <ListView ItemsSource="{Binding Source={StaticResource searchViewSource}}"
                  MaxHeight="500" MaxWidth="800">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical" Width="550">
                            <TextBlock Text="{Binding PrimaryName}" TextWrapping="Wrap"></TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Width="250">
                            <TextBlock Text="{Binding PrimaryProfession}"></TextBlock>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Page>
